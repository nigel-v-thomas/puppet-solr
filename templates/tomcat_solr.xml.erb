<!--
    Context configuration file for the Solr Web App
-->

<Context path="/solr" docBase="<%= @solr_home_dir %>"
   debug="0" privileged="true" allowLinking="true" crossContext="true">
  <!-- make symlinks work in Tomcat -->
  <Resources className="org.apache.naming.resources.FileDirContext" allowLinking="true" />

  <Environment name="solr/home" type="java.lang.String" value="<%= @solr_home_dir %>" override="true" />
  <Environment name="solr/data/dir" type="java.lang.String" value="<%= @solr_data_dir %>" override="true" />
</Context>
